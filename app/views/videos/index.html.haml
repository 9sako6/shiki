%div{class: 'w-9/12 m-auto'}
  %h1.text-3xl Videos

  .flex.flex-wrap
    = render @videos

  .text-center
    = paginate @videos

  %h2.text-2xl Tags
  .m-4
    = render @tags
:css
  .pagination .page {
    margin-right: .5rem;
    font-size: 1.5rem;
  }
  .pagination .page:hover {
    color: white;
  }
  .pagination .page.current {
    color: gray;
  }
