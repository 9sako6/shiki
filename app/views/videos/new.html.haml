%div{class: 'w-9/12 m-auto'}
  %h1.text-3xl Upload new video

  .w-500px.m-auto
    = form_with model: @video, local: true do |form|
      = render 'layouts/error_messages', object: @video
      .m-2
        %label.block.font-bold Title
        %input.mb-4.mt-4.w-full.outline-none.bg-gray-900.border.border-gray-500.text-xs.font-semibold.rounded-full.px-4.py-1.leading-normal{type: "text", name: "video[title]", id: "video_title"}
      .m-2
        %label.block.font-bold Video file
        = form.file_field :video
      .m-4.text-center
        %input.outline-none.text-white.bg-gray-700.border-gray-700.hover:bg-gray-600.hover:border-gray-600.border.text-xs.font-semibold.rounded-full.px-4.py-1.leading-normal.cursor-pointer{type: "submit", name: "commit", value: "Upload", 'data-disable-with': "Create Video"}
